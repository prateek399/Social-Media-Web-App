<%- include("partials/header"); -%>
<h1>Compose</h1>
<form action="/compose" method="post">
   <div class="form-group">
      <label>Title</label>
      <input
         class="form-control"
         type="text"
         name="title"
         placeholder="enter title"
      />
      <label>Post</label>
      <textarea
         class="form-control"
         name="message"
         placeholder="enter message"
         rows="5"
         cols="30"
      ></textarea>
   </div>
   <button type="submit" class="btn btn-primary">Submit</button>
</form>
<%- include("partials/footer"); -%>
